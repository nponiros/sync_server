{
  "name": "sync-server",
  "version": "1.0.0",
  "bugs": {
    "url": "https://github.com/nponiros/sync_server/issues"
  },
  "license": "MIT",
  "author": "Nikolas Poniros <nikolas@poniros.de>",
  "repository": {
    "type": "git",
    "url": "https://github.com/nponiros/sync_server.git"
  },
  "dependencies": {
    "body-parser": "1.15.2",
    "cors": "2.8.1",
    "express": "4.14.0",
    "minimist": "1.2.0",
    "nedb": "1.8.0",
    "yargs": "6.5.0",
    "winston": "2.3.0"
  },
  "devDependencies": {
    "chakram": "1.5.0",
    "eslint": "3.12.2",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "3.4.0",
    "eslint-plugin-standard": "2.0.1",
    "mocha": "3.2.0"
  },
  "scripts": {
    "start": "node ./bin/main.js",
    "pretest": "node ./test/test_server start &",
    "test": "npm run lint && npm run test-unit && mocha --reporter spec test/integration; node ./test/test_server stop",
    "test:unit": "mocha --reporter spec 'test/unit/**/*.spec.js'",
    "lint": "eslint --config .eslintrc 'lib/**/*.js' bin/main.js",
    "lint:fix": "eslint --fix --config .eslintrc 'lib/**/*.js' bin/main.js"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "preferGlobal": true,
  "bin": {
    "sync-server": "./bin/main.js"
  },
  "description": "A simple server which can be used to synchronize data from multiple devices",
  "keywords": [
    "synchronization",
    "file database",
    "synchronization server"
  ]
}
